<script>
    /*=========================== Functions ===============================*/
    const displayAll = () => {
        $('.card').show()
        $('.readfalse').css({"text-decoration": "none"})
        $('.readfalse').children('a').css({"opacity": "1"})
    }

    const displayOwned = () => {
        $('.ownedfalse').hide()
        $('.ownedtrue').show()
        $('.readfalse').css({"text-decoration": "none"})
        $('.readfalse').children('a').css({"opacity": "1"})
    }

    const displayUnowned = () => {
        $('.ownedfalse').show()
        $('.ownedtrue').hide()
        $('.readfalse').css({"text-decoration": "none"})
        $('.readfalse').children('a').css({"opacity": "1"})
    }

    const displayReadStatus = () => {
        $('.card').show()
        $('.readfalse').css({"text-decoration": "line-through"})
        $('.readfalse').children('a').css({"opacity": "0.1"})
    }

    // owned-true owned-false
    // read-true read false

    /*=============================Function Calls=============================*/
        $('#show-all').on('click', displayAll);
        $('#show-owned').on('click', displayOwned);
        $('#show-unowned').on('click', displayUnowned);
        $('#read-or-unread').on('click', displayReadStatus);
</script>